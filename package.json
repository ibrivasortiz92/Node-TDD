{
  "name": "express-ws",
  "version": "1.0.0",
  "description": "tdd with express",
  "main": "index.ts",
  "scripts": {
    "start:dev": "cross-env NODE_ENV=development nodemon index.ts",
    "start": "cross-env NODE_ENV=production ts-node index.ts",
    "test": "cross-env NODE_ENV=test jest --watchAll",
    "posttest": "cross-env NODE_ENV=test npm run clean-up",
    "test:staging": "cross-env NODE_ENV=staging jest -f . --runInBand --all",
    "posttest:staging": "cross-env NODE_ENV=staging npm run clean-up",
    "clean-up": "ts-node test-cleanup",
    "migrations": "cross-env NODE_ENV=development typeorm-ts-node-commonjs migration:generate ./database/migrations/migration -d ./database/dataSource.ts",
    "lint": "eslint ."
  },
  "keywords": [],
  "author": "Iram B. Rivas Ortiz",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/config": "^0.0.41",
    "@types/express": "^4.17.13",
    "@types/i18next-fs-backend": "^1.1.2",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^16.11.10",
    "@types/nodemailer": "^6.4.4",
    "@types/smtp-server": "^3.5.7",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "jest-watch-typeahead": "^1.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "smtp-server": "^3.10.0",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "config": "^3.3.7",
    "express": "^4.17.3",
    "express-validator": "^6.14.0",
    "file-type": "^14.7.0",
    "i18next": "^21.6.14",
    "i18next-fs-backend": "^1.1.4",
    "i18next-http-middleware": "^3.2.0",
    "nodemailer": "^6.7.2",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.5",
    "typeorm": "^0.3.6",
    "winston": "^3.7.2"
  },
  "jest": {
    "preset": "ts-jest",
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/config/"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:prettier/recommended"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "eqeqeq": "warn",
      "prettier/prettier": "warn"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  }
}
